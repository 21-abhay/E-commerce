extends ../template.pug 

block stylesheet 
    style 
        include ../css/update_details.css 

block JavaScript 
    script(src="/static/js/update_details.js") 

block header 

block contents
    div(class= 'container-fluide' id='update-details-header')
        h2() Update Details

    div(id="update-my-details")
        form(action=`/update/update-details/${profile.user_id}` method="post")
            //- div(id="change-detail")
            //- <div class="form-group">
            //-     input(type="file" name="image" value= `/static/upload/user/${profile.image}` class="form-control" id="")
            //- </div>
            <div class="form-group">
                <label for=""> First Name : </label>
                input(type="text" name="firstname" value=`${profile.first_name}` class="form-control" id="" required)
            </div>
            <div class="form-group">
                <label for=""> Last Name : </label>
                input(type="text" name="lastname" value=`${profile.last_name}` class="form-control" id="" required)
            </div>
            <div class="form-group">
                <label for=""> D.O.B : </label>
                input(type="date" name="dob" value=`${profile.dob}` class="form-control" id="" required)
            </div>
            //- <div class="form-group">
            //-     <label for=""> Location : </label>
            //-     input(type="text" name="location" value=`${profile.Location}` class="form-control" id="")
            //- </div>
            <div class="form-group">
                <label for=""> Email : </label>
                input(type="email" name="email" value=`${profile.email}` class="form-control" id="" required)
            </div>
            <div class="form-group">
                <label for=""> Mobile No. : </label>
                input(type="number" name="mobile" value=`${profile.mobile}` class="form-control" id="" required)
            </div>
            <div class="form-group">
                <label for=""> Password : </label>
                input(type="password" name="password" placeholder="Enter Password to update" class="form-control" id="" required)
            </div>
            //- <button type="button" class="btn btn-primary" onclick="show_confirm_detail()">Change</button>
            <button type="submit" class="btn btn-primary" >Submit</button>

